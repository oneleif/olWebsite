#set("content") {
    <div>
    <h1>#(title)</h1>

    <form method="get" action="/createPost">
        <div>
            <button type="submit" class="btn btn-primary">
                Create Post
            </button>
        </div>
    </form>

    </div>

    <div>
    #for(post in posts) {
        #set("postCard") {
            <div class="postBackground">
                <div class="postCard">
                    <div class="postTitle">
                        <div>
                            <label>Title</label>
                            <label>#(post.title)</label>
                        </div>

                        <div>
                            <label>Post Markdown</label>
                            <label>#(post.content)</label>
                        </div>
                    </div>
                    <div class="postDetail">
                        <div>
                            <label>Author</label>
                            <label>#(post.author)</label>
                        </div>

                        <a class="btn btn-warning" href="/viewPost/#(post.id)">
                            View Post
                        </a>
                    </div>
                </div>
            </div>
        }

        #get(postCard)
    }
    </div>
}

#embed("authBase")
